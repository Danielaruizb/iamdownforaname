								<script type="text/javascript">

									$('#faded img:gt(0)').css({'opacity':'0'});

									function faded_slide() {

										$('#faded img:eq(1)')
										.delay(2000)
										.animate({'opacity':'1'}, 1000, faded_slide_done);
									}

									function faded_slide_done() {
										console.log('All Done');

										$('#faded img:eq(0)')
											.css({'opacity':'0'})
											.appendTo('#faded');

										faded_slide();

									}

									faded_slide();
								</script>
